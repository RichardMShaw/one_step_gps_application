{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:vue/vue3-essential"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "vue"
  ],
  "rules": {
    "comma-dangle": "off",
    "space-before-function-paren": "off",
    "vue/v-slot-style": "off",
    "vue/valid-v-slot": "off",
    "vue/valid-template-root": "off",
    "vue/no-v-text-v-html-on-component": "Off",
    "vue/no-parsing-error": "off"
  }
}